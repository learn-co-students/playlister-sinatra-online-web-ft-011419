<h1>Edit: <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <p>Name: <input id="Name" type="text" name="song[name]" value="<%= @song.name %>"></p>
  <p>Artist Name: <input id="Artist Name" type="text" name="Artist Name" value="<%= @song.artist.name %>"></p>

  <p>Genres:</p>
  <% Genre.all.each do |genre| %>
    <p><%= genre.name %></p>
    <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>

  <p><input type="submit" name="Save" value="Save"></p>
</form>
